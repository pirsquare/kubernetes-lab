*.sqlite binary

# Scripts - should be executable
*.sh text eol=lf
*.bash text eol=lf

# Kubernetes and manifests
*.k8s.yaml text eol=lf
*.k8s.yml text eol=lf
kustomization.yaml text eol=lf

# Auto normalize line endings for all text files
* text=auto

# Attribute for merge conflict resolution
*.py merge=union
